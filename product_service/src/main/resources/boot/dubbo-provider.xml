<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="product-service"/>

    <dubbo:provider filter="authProviderInterceptor,logProviderInterceptor"></dubbo:provider>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zk.host}"/>

    <!--<dubbo:registry protocol="zookeeper" address="192.168.102.109:2181" />-->

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20596"  host="127.0.0.1"/>
    <!--商户接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.merchant.service.MerchantService" timeout="30000"
                   ref="merchantServiceImpl"/>
    <!--生成二维码接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.merchant.service.QrCodeService" timeout="30000"
                   ref="qrCodeServiceImpl"/>
    <!--商品接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.merchant.service.MerchandiseService" timeout="30000"
                   ref="merchandiseServiceImpl"/>
    <!--获取利率方案接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.ratescheme.service.RateSchemeService" timeout="30000"
                   ref="rateSchemeServiceImpl"/>
    <!--获取利率方案接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.serpackage.service.SerPackageService" timeout="30000"
                   ref="serPackageServiceImpl"/>
    <!--分享好友接口-->
    <dubbo:service interface="com.zw.miaofuspd.facade.share.service.IShareService" timeout="30000"
                   ref="shareServiceImpl"/>

</beans>